{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Typewriter",
	"patterns": [
        { "include": "#formatting" },
        { "include": "#comment" },
        { "include": "#tags" },
        { "include": "#escaped" }
	],
    "repository": {
        "escaped": {
            "patterns": [
                {
                    "name": "comment.block.content.tw",
                    "match": "\\\\(?=(\\*|\\/|-|_|\\[|\\]))"
                }
            ]
        },
        "formatting": {
            "patterns": [
                {
                    "name": "style.bold.tw",
                    "begin": "(?<!\\\\)\\*",
                    "beginCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "end": "(?<!\\\\)\\*",
                    "endCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "contentName": "style.bold.content.tw",
                    "patterns": [
                        { "include": "#formatting" },
                        { "include": "#tags" },
                        { "include": "#comment" }
                    ]
                },
                {
                    "name": "style.italic.tw",
                    "begin": "(?<!\\\\)/",
                    "beginCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "end": "(?<!\\\\)/",
                    "endCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "contentName": "style.italic.content.tw",
                    "patterns": [
                        { "include": "#formatting" },
                        { "include": "#tags" },
                        { "include": "#comment" }
                    ]
                },
                {
                    "name": "style.underline.tw",
                    "begin": "(?<!\\\\)_",
                    "beginCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "end": "(?<!\\\\)_",
                    "endCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "contentName": "style.underline.content.tw",
                    "patterns": [
                        { "include": "#formatting" },
                        { "include": "#tags" },
                        { "include": "#comment" }
                    ]
                },
                {
                    "name": "style.strike.tw",
                    "begin": "(?<!\\\\)-",
                    "beginCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "end": "(?<!\\\\)-",
                    "endCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "contentName": "style.strike.content.tw",
                    "patterns": [
                        { "include": "#formatting" },
                        { "include": "#tags" },
                        { "include": "#comment" }
                    ]
                }
            ]
        },
        "text": {
            "patterns": [
                {
                    "name": "text.plain.tw",
                    "match": "[^\\[\\]\\{\\}\\*]+"
                }
            ]
        },
        "tags": {
            "patterns": [
                {
                "name": "tag.tw",
                "match": "(?<!\\\\)\\[(newline|linebreak|sleep|speed|newpage|speeddefault|function|color|background|resetcolor|resetbg|tab)(?:\\s+(\\d+))?(?<!\\\\)\\]",
                    "captures": {
                        "0": { "name": "tag.tw" },
                        "1": { "name": "tag.tw" },
                        "2": { "name": "constant.numeric.tw" }
                    }
                },
                {
                    "name": "tag.color.tw",
                    "match": "((?<!\\\\)\\[color|background)\\s+(#(?:[A-Fa-f0-9]{3}|[A-Fa-f0-9]{6})|(\\d{1,3}\\s+\\d{1,3}\\s+\\d{1,3}))((?<!\\\\)\\])",
                    "captures": {
                        "0": { "name": "tag.tw" },
                        "2": { "name": "color-value.tag.tw" },
                        "1": { "name": "tag.tw" }
                    }
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.timecalc.tw",
                    "match": "\"(?:[^\"\\\\]|\\\\.)*\""
                },
                {
                    "name": "string.quoted.single.timecalc.tw",
                    "match": "'(?:[^'\\\\]|\\\\.)*'"
                }
            ]
        },
        "number": {
            "patterns": [
                {
                    "name": "constant.numeric.tw",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "timecalc": {
            "patterns": [
                {
                    "name": "definition.timecalc.comment.tw",
                    "match": "(char:|newline:)\\s*?(\\d+)",
                    "captures": {
                        "1": { "name": "parameter.timecalc.comment.tw" },
                        "0": { "name": "constant.numeric.tw" }
                    }
                }
            ]
        },
        "timecalc-custom": {
            "patterns": [
                {
                    "name": "meta.custom.definition.timecalc.comment.tw",
                    "begin": "(custom)(\\s*:\\s*)(\\{)",
                    "beginCaptures": {
                        "1": { "name": "custom.timecalc.comment.tw" }
                    },
                    "end": "(\\})",
                    "endCaptures": {
                        "1": { "name": "punctuation.definition.brace.end.timecalc.comment.tw" }
                    },
                    "contentName": "custom.definition.content.timecalc.comment.tw",
                    "patterns": [
                        { "include": "#strings" },
                        { "include": "#number" }
                    ]
                }
            ]
        },
        "comment": {
            "patterns": [
                {
                    "name": "comment.block.timecalc.tw",
                    "begin": "(\\{\\{#)(timecalc)",
                    "beginCaptures": {
                        "1": { "name": "punctuation.definition.comment.begin.tw" },
                        "2": { "name": "timecalc.comment.block.tw" }
                    },
                    "end": "#\\}\\}",
                    "endCaptures": {
                        "0": { "name": "punctuation.definition.comment.end.tw" }
                    },
                    "contentName": "comment.block.content.tw",
                    "patterns": [
                        { "include": "#timecalc" },
                        { "include": "#timecalc-custom" }
                    ]
                },
                {
                    "name": "comment.block.tw",
                    "begin": "\\{\\{#",
                    "beginCaptures": {
                        "0": { "name": "punctuation.definition.comment.begin.tw" }
                    },
                    "end": "#\\}\\}",
                    "endCaptures": {
                        "0": { "name": "punctuation.definition.comment.end.tw" }
                    },
                    "contentName": "comment.block.content.tw"
                }
            ]
        }
    },
    "scopeName": "source.tw"
}