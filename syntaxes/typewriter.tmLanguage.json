{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Typewriter",
	"patterns": [
        { "include": "#formatting" },
        { "include": "#comment" },
        { "include": "#tags" },
        { "include": "#escaped" }
	],
    "repository": {
        "escaped": {
            "patterns": [
                {
                    "name": "comment.block.content.tw",
                    "match": "\\\\(?=(\\*|\\/|-|_|\\[|\\]))"
                }
            ]
        },
        "formatting": {
            "patterns": [
                {
                    "name": "style.bold.tw",
                    "begin": "(?<!\\\\)\\*",
                    "beginCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "end": "(?<!\\\\)\\*",
                    "endCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "contentName": "style.bold.content.tw",
                    "patterns": [
                        { "include": "#formatting" },
                        { "include": "#tags" }
                    ]
                },
                {
                    "name": "style.italic.tw",
                    "begin": "(?<!\\\\)/",
                    "beginCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "end": "(?<!\\\\)/",
                    "endCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "contentName": "style.italic.content.tw",
                    "patterns": [
                        { "include": "#formatting" },
                        { "include": "#tags" }
                    ]
                },
                {
                    "name": "style.underline.tw",
                    "begin": "(?<!\\\\)_",
                    "beginCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "end": "(?<!\\\\)_",
                    "endCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "contentName": "style.underline.content.tw",
                    "patterns": [
                        { "include": "#formatting" },
                        { "include": "#tags" }
                    ]
                },
                {
                    "name": "style.strike.tw",
                    "begin": "(?<!\\\\)-",
                    "beginCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "end": "(?<!\\\\)-",
                    "endCaptures": {
                        "0": { "name": "comment.block.content.tw" }
                    },
                    "contentName": "style.strike.content.tw",
                    "patterns": [
                        { "include": "#formatting" },
                        { "include": "#tags" }
                    ]
                }
            ]
        },
        "text": {
            "patterns": [
                {
                    "name": "text.plain.tw",
                    "match": "[^\\[\\]\\{\\}\\*]+"
                }
            ]
        },
        "tags": {
            "patterns": [
                {
                "name": "tag.tw",
                "match": "(?<!\\\\)\\[(newline|linebreak|sleep|speed|newpage|speeddefault|function|color|bgcolor)(?:\\s+(\\d+))?(?<!\\\\)\\]",
                    "captures": {
                        "0": { "name": "tag.tw" },
                        "1": { "name": "tag.tw" },
                        "2": { "name": "constant.numeric.tw" }
                    }
                },
                {
                    "name": "tag.color.tw",
                    "match": "((?<!\\\\)\\[color)\\s+(#(?:[A-Fa-f0-9]{3}|[A-Fa-f0-9]{6})|(\\d{1,3}\\s+\\d{1,3}\\s+\\d{1,3}))((?<!\\\\)\\])",
                    "captures": {
                        "0": { "name": "tag.tw" },
                        "2": { "name": "color-value.tag.tw" },
                        "1": { "name": "tag.tw" }
                    }
                }
            ]
        },
        "comment": {
            "patterns": [
                {
                    "name": "comment.block.tw",
                    "begin": "\\{\\{#",
                    "beginCaptures": {
                        "0": { "name": "punctuation.definition.comment.begin.tw" }
                    },
                    "end": "#\\}\\}",
                    "endCaptures": {
                        "0": { "name": "punctuation.definition.comment.end.tw" }
                    },
                    "contentName": "comment.block.content.tw"
                }
            ]
        }
    },
    "scopeName": "source.tw"
}