{
    "name": "typewriter",
    "displayName": "typewriter syntax highlighting",
    "description": "highlights typewriter markdown",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.104.0"
    },
    "publisher": "Rus1130",
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:typewriter"
    ],
    "main": "./client/extension.js",
    "contributes": {
        "iconThemes": [
            {
                "id": "typewriter",
                "label": "Typewriter",
                "path": "./fileicons/tw-icon-theme.json"
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "color-value.tag.tw",
                        "settings": {
                            "foreground": "#e59cff"
                        }
                    },
                    {
                        "scope": "text.plain.tw",
                        "settings": {
                            "foreground": "#CCCCCC"
                        }
                    },
                    {
                        "scope": "tag.tw",
                        "settings": {
                            "foreground": "#b0ccff",
                            "fontStyle": ""
                        }
                    },
                    {
                        "scope": "style.bold.tw",
                        "settings": {
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "style.italic.tw",
                        "settings": {
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "style.underline.tw",
                        "settings": {
                            "fontStyle": "underline"
                        }
                    },
                    {
                        "scope": "style.strike.tw",
                        "settings": {
                            "fontStyle": "strikethrough"
                        }
                    }
                ]
            }
        },
        "languages": [
            {
                "id": "typewriter",
                "aliases": [
                    "Typewriter",
                    "typewriter"
                ],
                "extensions": [
                    ".tw"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "typewriter",
                "scopeName": "source.tw",
                "path": "./syntaxes/typewriter.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "vsce": "^2.15.0",
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.12"
    }
}
