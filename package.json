{
    "name": "typewriter",
    "displayName": "typewriter syntax highlighting",
    "description": "highlights typewriter markdown",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.104.0"
    },
    "publisher": "Rus1130",
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:typewriter",
        "onLanguage:typewriter-hover"
    ],
    "main": "./client/extension.js",
    "contributes": {
                "commands": [
            {
                "command": "typewriter.preview",
                "title": "â–¶ Preview"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "typewriter.preview",
                    "when": "resourceLangId == typewriter",
                    "group": "navigation@1"
                }
            ]
        },
        "iconThemes": [
            {
                "id": "typewriter",
                "label": "Typewriter",
                "path": "./fileicons/tw-icon-theme.json"
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "text.plain.twh",
                        "settings": {
                            "foreground": "#CCCCCC",
                            "fontStyle": ""
                        }
                    },
                    {
                        "scope": "char-token.tag.twh",
                        "settings": {
                            "foreground": "#ffd23e",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "custom.timecalc.comment.tw",
                        "settings": {
                            "foreground": "#BB9CF7"
                        }
                    },
                    {
                        "scope": "timecalc.comment.block.tw",
                        "settings": {
                            "foreground": "#48ff9a",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "parameter.timecalc.comment.tw",
                        "settings": {
                            "foreground": "#F3A56A"
                        }
                    },
                    {
                        "scope": "rgb-hex-value.tag.tw",
                        "settings": {
                            "foreground": "#f27aff"
                        }
                    },
                    {
                        "scope": "text.plain.tw",
                        "settings": {
                            "foreground": "#CCCCCC"
                        }
                    },
                    {
                        "scope": "tag.tw",
                        "settings": {
                            "foreground": "#b0ccff",
                            "fontStyle": ""
                        }
                    },
                    {
                        "scope": "style.bold.tw",
                        "settings": {
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "style.italic.tw",
                        "settings": {
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "style.underline.tw",
                        "settings": {
                            "fontStyle": "underline"
                        }
                    },
                    {
                        "scope": "style.strike.tw",
                        "settings": {
                            "fontStyle": "strikethrough"
                        }
                    }
                ]
            }
        },
        "languages": [
            {
                "id": "typewriter",
                "aliases": [
                    "Typewriter",
                    "typewriter"
                ],
                "extensions": [
                    ".tw"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "typewriter-hover",
                "aliases": [
                    "Typewriter Hover",
                    "typewriter-hover"
                ],
                "extensions": [
                    ".twh"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "typewriter",
                "scopeName": "source.tw",
                "path": "./syntaxes/typewriter.tmLanguage.json"
            },
            {
                "language": "typewriter-hover",
                "scopeName": "source.twh",
                "path": "./syntaxes/typewriterHover.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "vsce": "^2.15.0",
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.12"
    }
}
